<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue"
    tools:context=".activities.ColorsSettingsActivity"
    >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/scr_v_settings_clr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_settings_clr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cst_lt_chld_settings_clr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_clr_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toTopOf="@id/num_pck_clr_amount"
                app:layout_constraintBottom_toBottomOf="@id/num_pck_clr_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/num_pck_clr_amount"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="@string/colors_amount"
                style="@style/SettingsTextViewStyle"

                />

            <NumberPicker
                android:id="@+id/num_pck_clr_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_clr_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.0"
                android:theme="@style/NumberPickerTheme"
                android:textColor="?attr/colorPrimary"
                android:colorControlNormal="?attr/colorPrimary"
                android:layout_marginStart="@dimen/settings_small_margin"
                android:layout_marginEnd="@dimen/settings_large_margin"

                />

            <TextView
                android:id="@+id/tv_distinct_clr_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toTopOf="@id/num_pck_distinct_clr_amount"
                app:layout_constraintBottom_toBottomOf="@id/num_pck_distinct_clr_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/num_pck_distinct_clr_amount"

                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0"
                android:text="@string/distinct_colors_amount"
                style="@style/SettingsTextViewStyle"
                />

            <NumberPicker
                android:id="@+id/num_pck_distinct_clr_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/num_pck_clr_amount"
                app:layout_constraintStart_toEndOf="@id/tv_distinct_clr_amount"
                app:layout_constraintEnd_toEndOf="parent"

                android:theme="@style/NumberPickerTheme"
                android:textColor="?attr/colorPrimary"
                android:colorControlNormal="?attr/colorPrimary"
                android:layout_marginStart="@dimen/settings_small_margin"
                android:layout_marginEnd="@dimen/settings_large_margin"

                />

            <TextView
                android:id="@+id/tv_clr_show_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toTopOf="@id/num_pck_clr_show_time"
                app:layout_constraintBottom_toBottomOf="@id/num_pck_clr_show_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/num_pck_clr_show_time"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0"
                android:text="@string/color_show_time"
                style="@style/SettingsTextViewStyle"
                />

            <NumberPicker
                android:id="@+id/num_pck_clr_show_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/num_pck_distinct_clr_amount"
                app:layout_constraintStart_toEndOf="@id/tv_clr_show_time"
                app:layout_constraintEnd_toEndOf="parent"

                android:theme="@style/NumberPickerTheme"
                android:textColor="?attr/colorPrimary"
                android:colorControlNormal="?attr/colorPrimary"
                android:layout_marginStart="@dimen/settings_small_margin"
                android:layout_marginEnd="@dimen/settings_large_margin"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <ImageButton
        android:id="@+id/btn_save_settings_clr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_play_w_settings_clr"
        app:layout_constraintTop_toBottomOf="@id/scr_v_settings_clr"
        android:background="@drawable/btn_save_bg"
        android:contentDescription="@string/info"
        android:elevation="@dimen/btn_stats_elev"
        android:src="@drawable/baseline_save_60"

        android:layout_marginTop="@dimen/settings_medium_margin"
        android:layout_marginBottom="@dimen/settings_medium_margin"
        />

    <ImageButton
        android:id="@+id/btn_play_w_settings_clr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_save_settings_clr"
        app:layout_constraintTop_toTopOf="@id/btn_save_settings_clr"
        app:layout_constraintStart_toEndOf="@id/btn_save_settings_clr"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/btn_save_and_play_bg"
        android:contentDescription="@string/info"
        android:elevation="@dimen/btn_stats_elev"
        android:src="@drawable/round_play_arrow_60"

        />
</androidx.constraintlayout.widget.ConstraintLayout>



