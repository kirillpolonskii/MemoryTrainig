<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <Button
        android:id="@+id/btn_training"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_play_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_play_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_left"

        android:background="@drawable/btn_round_corner_bg"
        android:layout_marginStart="3dp"
        />
    
    <TextView
        android:id="@+id/tv_play_hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_play_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_play_info"
        app:layout_constraintStart_toEndOf="@id/btn_training"
        app:layout_constraintEnd_toStartOf="@id/tv_play_info"

        android:text="@string/hyphen"
        style="@style/SettingsTextViewStyle.MarginHorizontal"
        />
    <TextView
        android:id="@+id/tv_play_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_play_hyphen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:text="@string/tv_play_info"
        style="@style/SettingsTextViewStyle"
        android:layout_marginEnd="3dp"
        />
    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_settings_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_settings_info"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/outline_settings_48"
        android:layout_marginStart="3dp"
        />
    <TextView
        android:id="@+id/tv_settings_hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_settings_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_settings_info"
        app:layout_constraintStart_toEndOf="@id/iv_settings"
        app:layout_constraintEnd_toStartOf="@id/tv_settings_info"

        android:text="@string/hyphen"
        style="@style/SettingsTextViewStyle.MarginHorizontal"
        />

    <TextView
        android:id="@+id/tv_settings_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_play_info"
        app:layout_constraintStart_toEndOf="@id/tv_settings_hyphen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:text="@string/tv_settings_info"
        style="@style/SettingsTextViewStyle"
        android:layout_marginEnd="3dp"
        />

    <ImageView
        android:id="@+id/iv_statistics"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_statistics_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_statistics_info"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/outline_assessment_60"
        android:layout_marginStart="3dp"
        />
    <TextView
        android:id="@+id/tv_statistics_hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_statistics_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_statistics_info"
        app:layout_constraintStart_toEndOf="@id/iv_statistics"
        app:layout_constraintEnd_toStartOf="@id/tv_statistics_info"

        android:text="@string/hyphen"
        style="@style/SettingsTextViewStyle.MarginHorizontal"
        />
    <TextView
        android:id="@+id/tv_statistics_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_info"
        app:layout_constraintStart_toEndOf="@id/tv_statistics_hyphen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:text="@string/tv_statistics_info"
        style="@style/SettingsTextViewStyle"
        android:layout_marginEnd="3dp"
        />
    <TextView
        android:id="@+id/tv_swipe_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_statistics_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:text="@string/tv_swipe_info"
        style="@style/SettingsTextViewStyle"
        android:layout_marginHorizontal="3dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>