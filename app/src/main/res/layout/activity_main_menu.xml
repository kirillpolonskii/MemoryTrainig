<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenuActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_mahjong_set_training"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_mahjong_set_training"
        app:layout_constraintTop_toTopOf="@id/btn_mahjong_set_training"
        app:layout_constraintHorizontal_chainStyle="packed"

        />

    <Button
        android:id="@+id/btn_mahjong_set_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_mahjong_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_color_set_training"
        app:layout_constraintLeft_toRightOf="@id/btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"

        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_color_set_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/btn_color_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_figure_set_training"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mahjong_set_training"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_figure_set_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetTop="6dp"
        android:insetBottom="6dp"

        android:text="@string/btn_figure_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_word_set_training"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_color_set_training"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_word_set_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_word_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_phrase_set_training"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_figure_set_training"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_phrase_set_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_phrase_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_picture_training"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_word_set_training"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_picture_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_picture_training_ru"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_phrase_set_training"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>