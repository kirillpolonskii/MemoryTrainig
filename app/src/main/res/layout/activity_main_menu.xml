<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenuActivity">

    <ImageButton
        android:id="@+id/btn_info"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/outline_info_40"
        android:contentDescription="@string/info"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_mahjong_set_training"
        style="@style/main_menu_btn"
        android:layout_height="wrap_content"
        android:text="@string/btn_mahjong_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_color_set_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"

         />

    <Button
        android:id="@+id/btn_color_set_training"
        style="@style/main_menu_btn"
        android:layout_height="wrap_content"
        android:text="@string/btn_color_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_figure_set_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mahjong_set_training"
         />

    <Button
        android:id="@+id/btn_figure_set_training"
        style="@style/main_menu_btn"
        android:layout_height="wrap_content"
        android:text="@string/btn_figure_set_training_ru"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/btn_word_set_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_color_set_training"
        />

    <Button
        android:id="@+id/btn_word_set_training"
        style="@style/main_menu_btn"
        android:layout_height="wrap_content"
        android:text="@string/btn_word_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_phrase_set_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_figure_set_training"
        />

    <Button
        android:id="@+id/btn_phrase_set_training"
        style="@style/main_menu_btn"
        android:layout_height="wrap_content"
        android:text="@string/btn_phrase_set_training_ru"
        app:layout_constraintBottom_toTopOf="@id/btn_details_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_word_set_training"
        />

    <Button
        android:id="@+id/btn_details_training"
        style="@style/main_menu_btn"
        android:layout_height="wrap_content"
        android:text="@string/btn_details_training_ru"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_phrase_set_training"
        />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/tgbtn_enru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_stats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_details_training"
        app:checkedButton="@id/btn_ru"
        app:singleSelection="true"
        >
        <Button
            android:id="@+id/btn_ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ru"
            style="@style/switch_lang_btn"
            />
        <Button
            android:id="@+id/btn_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/en"
            style="@style/switch_lang_btn"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ImageButton
        android:id="@+id/btn_stats"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/outline_assessment_24"
        app:layout_constraintLeft_toRightOf="@id/tgbtn_enru"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_details_training"
        android:contentDescription="@string/statistics"
        />

</androidx.constraintlayout.widget.ConstraintLayout>