<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cst_lt_parent_mhj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white_blue"
    tools:context=".activities.MahjongTrainingActivity"
    android:clipChildren="false"
    android:clipToPadding="false"
    >
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frt_cnt_v_tiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"

        android:layout_marginTop="@dimen/stopwatch_top_margin"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cst_lt_chld_mhj"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"

        android:clipChildren="false"
        android:clipToPadding="false"
        >

        <ImageButton
            android:id="@+id/btn_tile_pos_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_6"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_1"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_3"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_7"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_2"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_4"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_8"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_1"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_6"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginVertical="@dimen/m_training_vert_middle_margin_12"
            />
        <ImageButton
            android:id="@+id/btn_tile_pos_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_2"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_10"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_5"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_7"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"
            android:layout_marginVertical="@dimen/m_training_vert_middle_margin_12"
            />
        <ImageButton
            android:id="@+id/btn_tile_pos_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_3"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_11"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_6"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_8"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"
            android:layout_marginVertical="@dimen/m_training_vert_middle_margin_12"
            />
        <ImageButton
            android:id="@+id/btn_tile_pos_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_4"
            app:layout_constraintBottom_toTopOf="@id/btn_tile_pos_12"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"
            android:layout_marginVertical="@dimen/m_training_vert_middle_margin_12"
            />
        <ImageButton
            android:id="@+id/btn_tile_pos_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_10"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_9"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_11"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_10"
            app:layout_constraintEnd_toStartOf="@id/btn_tile_pos_12"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"

            />
        <ImageButton
            android:id="@+id/btn_tile_pos_12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tile_pos_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_tile_pos_11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1"

            android:src="@drawable/tile_back"
            android:background="@drawable/btn_tile_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/info"
            android:layout_marginStart="@dimen/m_training_horiz_middle_margin"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>

