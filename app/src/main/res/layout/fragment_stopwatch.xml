<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_pause_resume"
        app:layout_constraintBottom_toBottomOf="@id/btn_pause_resume"
        app:layout_constraintEnd_toStartOf="@id/btn_pause_resume"
        android:layout_marginEnd="10dp"
        style="@style/SettingsTextViewStyle"
        />
    <ImageButton
        android:id="@+id/btn_pause_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/anim_pause_resume"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/info"
        android:elevation="@dimen/btn_info_elev"

        />
</androidx.constraintlayout.widget.ConstraintLayout
    >