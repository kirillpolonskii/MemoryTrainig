<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cst_lt_details_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailsTrainingActivity"
    android:background="@color/white_blue"

    android:clipChildren="false"
    android:clipToPadding="false">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frgt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_top_seq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"

        android:layout_marginTop="@dimen/stopwatch_top_margin"
        />

    <TextView
        android:id="@+id/tv_question_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_seq"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_seq"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"

        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:text="TEST"
        />
    <RadioGroup
        android:id="@+id/rg_single_answer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom_seq"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_1"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        >
        <RadioButton
            android:id="@+id/r_btn_answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimary"
            android:textSize="20sp"
            android:buttonTint="?attr/colorPrimary"

            />

        <RadioButton
            android:id="@+id/r_btn_answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />

        <RadioButton
            android:id="@+id/r_btn_answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />
        <RadioButton
            android:id="@+id/r_btn_answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />
        <RadioButton
            android:id="@+id/r_btn_answer_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />
        <RadioButton
            android:id="@+id/r_btn_answer_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />
        <RadioButton
            android:id="@+id/r_btn_answer_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />
        <RadioButton
            android:id="@+id/r_btn_answer_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Java"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:buttonTint="?attr/colorPrimary"
            />
    </RadioGroup>

    <CheckBox
        android:id="@+id/ck_bx_answer_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rg_single_answer"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_2"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_1"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_3"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_2"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_4"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_3"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_5"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:visibility="gone"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_4"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_6"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:visibility="gone"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_5"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_7"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:visibility="gone"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_6"
        app:layout_constraintBottom_toTopOf="@id/ck_bx_answer_8"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:visibility="gone"
        />
    <CheckBox
        android:id="@+id/ck_bx_answer_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ck_bx_answer_7"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_pal"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"

        android:text="kgnrkg"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_pal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>