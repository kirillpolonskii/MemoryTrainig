<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FinishDialogFragment">

    <TextView
        android:id="@+id/tv_training_dur_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_border"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"

        android:text="@string/training_dur"
        style="@style/SettingsTextViewStyle"
        android:layout_margin="5dp"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/tv_training_dur_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_training_dur_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_training_dur_text"
        app:layout_constraintStart_toEndOf="@id/guideline_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        style="@style/SettingsTextViewStyle"
        />
    <TextView
        android:id="@+id/tv_amount_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_training_dur_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_border"
        app:layout_constraintHorizontal_bias="0"

        style="@style/SettingsTextViewStyle"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_amount_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_amount_text"
        app:layout_constraintStart_toEndOf="@id/guideline_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        style="@style/SettingsTextViewStyle"
        android:layout_marginStart="5dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>