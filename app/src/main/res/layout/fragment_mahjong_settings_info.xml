<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_save_mahjong_settings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_save_mahjong_settings_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_save_mahjong_settings_info"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/baseline_save_24"
        />
    <TextView
        android:id="@+id/tv_save_mahjong_settings_hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_save_mahjong_settings_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_save_mahjong_settings_info"
        app:layout_constraintStart_toEndOf="@id/iv_save_mahjong_settings"

        android:text="@string/hyphen"
        style="@style/SettingsTextViewStyle"
        />
    <TextView
        android:id="@+id/tv_save_mahjong_settings_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_save_mahjong_settings_hyphen"


        android:text="@string/tv_save_settings"
        style="@style/SettingsTextViewStyle"

        />
    <ImageView
        android:id="@+id/iv_save_mahjong_settings_and_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_save_mahjong_settings_and_play_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_save_mahjong_settings_and_play_info"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/round_play_arrow_24"
        />
    <TextView
        android:id="@+id/tv_save_mahjong_settings_and_play_hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_save_mahjong_settings_and_play_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_save_mahjong_settings_and_play_info"
        app:layout_constraintStart_toEndOf="@id/iv_save_mahjong_settings"

        android:text="@string/hyphen"
        style="@style/SettingsTextViewStyle"
        />
    <TextView
        android:id="@+id/tv_save_mahjong_settings_and_play_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_save_mahjong_settings_info"
        app:layout_constraintStart_toEndOf="@id/tv_save_mahjong_settings_and_play_hyphen"

        android:text="@string/tv_save_settings_and_play"
        style="@style/SettingsTextViewStyle"

        />
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
</androidx.constraintlayout.widget.ConstraintLayout>