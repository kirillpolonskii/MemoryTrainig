<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_menu_btn">
        <item name="android:background">@drawable/btn_round_corner_bg</item>
        <item name="android:layout_marginTop">@dimen/main_menu_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_menu_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">.65</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:stateListAnimator">"@null"</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="switch_lang_btn" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">19dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:backgroundTint">@color/btn_switch_lang_bg_color</item>
        <item name="android:textColor">@color/btn_switch_lang_text_color</item>

    </style>
</resources>