<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainMenu">
        <item name="android:background">@drawable/btn_round_corner_bg</item>
        <item name="android:layout_marginTop">@dimen/main_menu_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_menu_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">.65</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">"@null"</item>
        <item name="android:elevation">@dimen/btn_training_elev</item>
    </style>

    <style name="SegmentedButtonGroupStyle">
        <item name="android:background">@color/light_blue</item>
        <item name="borderColor">?attr/colorPrimary</item>
        <item name="borderWidth">3dp</item>
        <item name="radius">30dp</item>
        <item name="ripple">false</item>
        <item name="selectedBackground">?attr/colorPrimary</item>
        <item name="selectionAnimationDuration">0</item>
        <item name="dividerWidth">1dp</item>
        <item name="divider">?attr/colorPrimary</item>
    </style>

    <style name="SegmentedButtonStyle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="selectedTextColor">@color/white</item>
        <item name="textColor">?attr/colorPrimary</item>
        <item name="textSize">@dimen/switch_lang_text_size</item>
    </style>

    <style name="WordsPalBtnStyle">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="textColor">@color/blue</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="SettingsTextViewStyle.MarginStart" parent="SettingsTextViewStyle">
        <item name="android:layout_marginStart">@dimen/settings_horiz_margin</item>
    </style>
    <style name="SettingsTextViewStyle.MarginHorizontal" parent="SettingsTextViewStyle">
        <item name="android:layout_marginStart">@dimen/info_horiz_margin</item>
        <item name="android:layout_marginEnd">@dimen/info_horiz_margin</item>
    </style>
    
    <style name="NumberPickerTheme" parent="Theme.MemoryTraining">
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerItemDropdownStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">22sp</item>

    </style>

</resources>