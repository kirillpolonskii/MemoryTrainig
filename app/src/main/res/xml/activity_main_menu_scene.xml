<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:touchRegionId="@id/btn_mahjong_set_training"
            motion:dragDirection="dragLeft"
            />
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/btn_mahjong_set_training"
            motion:layout_constraintBottom_toTopOf="@id/btn_color_set_training"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintWidth_default="percent"
            motion:layout_constraintWidth_percent=".65"
            motion:layout_constraintHeight="wrap_content"
            motion:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="@dimen/main_menu_margin"
            android:layout_marginTop="@dimen/main_menu_margin"
            android:alpha="1"

            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btn_mahjong_set_training"
            motion:layout_constraintBottom_toTopOf="@id/btn_color_set_training"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintWidth_default="percent"
            motion:layout_constraintWidth_percent=".65"
            motion:layout_constraintHeight="wrap_content"
            motion:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="@dimen/main_menu_margin"
            android:layout_marginTop="@dimen/main_menu_margin"
            android:alpha="0.1"

            />
    </ConstraintSet>
    <!--android:translationX="20dp"-->
</MotionScene>